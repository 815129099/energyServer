<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.user.PermissionDao">


    <resultMap id="permissionMap" type="com.example.demo.entity.One2Many">
        <id column="userId" property="userId"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="roleId" property="roleId"/>
        <result column="roleName" property="roleName"/>
        <collection property="menuList" ofType="String">
            <id column="menuCode" property="menuCode"/>
        </collection>
        <collection property="permissionList" ofType="String">
            <id column="permissionCode" property="permissionCode"/>
        </collection>
    </resultMap>


    <select id="getUserPermission" resultMap="permissionMap">
        SELECT
            u.id              userId,
            u.geName          nickname,
            u.roleId          roleId,
            u.geNumber        username,
            r.role            roleName,
            p.menuCode        menuCode,
            p.permissionCode  permissionCode
        FROM User u
                 LEFT JOIN sys_role r ON r.id = u.roleId
                 LEFT JOIN sys_role_permission rp ON u.roleId = rp.roleId
                 LEFT JOIN sys_permission p ON rp.permissionId = p.id AND rp.rpState = 0
        WHERE u.geNumber = #{username}
          AND u.userState = "有效"
    </select>

    <select id="getAllPermission" resultType="String">
        SELECT p.permissionCode permissionCode
        FROM sys_permission p
        ORDER BY p.id
    </select>
    <select id="getAllMenu" resultType="String">
        SELECT p.menuCode menuCode
        FROM sys_permission p
        ORDER BY p.id
    </select>

